---
import Next from '../components/icons/next.astro';
---
<div class="relative hidden z-10" id="button">
    <a href="/options" class="absolute bottom-0 right-0 m-4 py-2 px-4 text-white font-semibold flex flex-row gap-2 border-[1px] border-sky-700 rounded-lg transform duration-200 hover:bg-sky-700 active:scale-75">
        Siguiente
        <Next />
    </a>
</div>

<script>
let button = document.getElementById('button');

setTimeout(() => {
    button?.classList.remove('hidden');
    button?.classList.add('flex');
}, 51000);

</script>